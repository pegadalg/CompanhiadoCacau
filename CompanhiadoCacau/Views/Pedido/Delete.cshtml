@model CompanhiadoCacau.Models.Pedido

@{
    ViewData["Title"] = "Excluir Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3 class="page-title text-danger">Excluir Pedido</h3>
    <hr />

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4>Detalhes do Pedido</h4>
            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label">Cliente CPF</label>
                    <input type="text" class="form-control" value="@Model.Cliente.CPF" readonly />
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Status</label>
                    <input type="text" class="form-control" value="@Model.Status" readonly />
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label">Data do Pedido</label>
                    <input type="text" class="form-control" value="@Model.DataPedido.ToString("yyyy-MM-dd")" readonly />
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Responsável Atendimento</label>
                    <input type="text" class="form-control" value="@Model.ResponsavelAtendimento" readonly />
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary w-25">Cancelar</a>
        <button type="button" class="btn btn-danger w-25" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Excluir</button>
    </div>

    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Pedido não pode ser excluido pois está associado a cliente!
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary me-2 w-25" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="PedidoId" />
                        <button type="submit" class="btn btn-danger">Confirmar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        margin-top: 50px;
    }

    .page-title {
        margin-bottom: 30px;
        color: #dc3545;
    }

    .form-control[readonly] {
        background-color: #f9f9f9;
        cursor: not-allowed;
    }

    .btn-danger, .btn-secondary {
        margin-top: 10px;
        width: 100%;
        border-radius: 0.375rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 10px;
    }

    .card {
        border-radius: 10px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-group.col-md-6 {
        flex: 1 0 48%;
    }
</style>


