@model CompanhiadoCacau.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3 class="page-title text-danger">Excluir Produto</h3>
    <hr />

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label">Nome</label>
                    <input type="text" class="form-control" value="@Model.Nome" readonly />
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Valor</label>
                    <input type="text" class="form-control" value="@Model.Valor.ToString("C")" readonly />
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-6">
                    <label class="control-label">Categoria</label>
                    <input type="text" class="form-control" value="@Model.Categoria" readonly />
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Index" class="btn btn-secondary w-25">Cancelar</a>
        <button type="button" class="btn btn-danger w-25" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Excluir</button>
    </div>

    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger" id="confirmDeleteModalLabel">Confirmar Exclusão</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Caso produto esteja associado a um pedido, não será possivel excluí-lo.
                </div>
                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-secondary me-2 w-25" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="ProdutoId" />
                        <button type="submit" class="btn btn-danger">Confirmar</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .container {
        margin-top: 50px;
    }

    .page-title {
        margin-bottom: 30px;
        color: #dc3545;
    }

    .form-control[readonly] {
        background-color: #f9f9f9;
        cursor: not-allowed;
    }

    .btn-danger, .btn-secondary {
        margin-top: 10px;
        width: 100%;
        border-radius: 0.375rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 10px;
    }

    .card {
        border-radius: 10px;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-group.col-md-6 {
        flex: 1 0 48%;
    }

    .alert-warning {
        font-size: 1.1rem;
        background-color: #fff3cd;
        border-color: #ffeeba;
    }
</style>
