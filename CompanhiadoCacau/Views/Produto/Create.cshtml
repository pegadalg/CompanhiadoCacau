@model CompanhiadoCacau.Models.Produto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3 class="page-title">Cadastrar Produto</h3>
    <hr />
    <form asp-action="Create" class="form-container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
            <label asp-for="Marca" class="control-label">Marca</label>
            <input asp-for="Marca" class="form-control" />
            <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

        <div class="form-group w-25">
            <label asp-for="Valor" class="control-label">Valor</label>
            <input asp-for="Valor" class="form-control w-50" type="number" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="form-group d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            <input type="submit" value="Criar" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-container {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .w-100 {
        width: 100%;
    }

    .btn-primary, .btn-secondary {
        border-radius: 10px;
    }
</style>
