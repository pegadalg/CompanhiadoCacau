@model CompanhiadoCacau.Models.Endereco

<h4>Endereco</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="get">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input asp-for="CEP" class="form-control" />
                <span asp-validation-for="CEP" class="text-danger"></span>
                <input type="submit" value="Buscar Endereço" class="btn btn-secondary" />
            </div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label"></label>
                <input asp-for="Logradouro" class="form-control" readonly />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" readonly />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localidade" class="control-label"></label>
                <input asp-for="Localidade" class="form-control" readonly />
                <span asp-validation-for="Localidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UF" class="control-label"></label>
                <input asp-for="UF" class="form-control" readonly />
                <span asp-validation-for="UF" class="text-danger"></span>
            </div>


        </form>

        <!-- Formulário para criar o endereço -->
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="IdEndereco" />
            <input type="hidden" asp-for="CEP" />
            <input type="hidden" asp-for="Logradouro" />
            <input type="hidden" asp-for="Bairro" />
            <input type="hidden" asp-for="Localidade" />
            <input type="hidden" asp-for="UF" />
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control" />
            <span asp-validation-for="Numero" class="text-danger"></span>
            
        </form>
    </div>
</div>
